<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Libery_Frontend.Views.AddCategory">
    <ContentPage.Resources>

        <ResourceDictionary Source="ResourcePage.xaml"/>
    </ContentPage.Resources>
    <ContentPage.Content/>
    <ScrollView>
            <StackLayout Padding="10,0,10,0">

                <StackLayout Orientation="Horizontal">
                    <Picker x:Name="AllCategories" Title="Se alla kategorier" VerticalOptions="CenterAndExpand" Margin="10,0" WidthRequest="300"
                            SelectedIndexChanged="AllCategories_SelectedIndexChanged">
                        
                    </Picker>

                </StackLayout>
                <StackLayout>
                    <Label x:Name="Categories" Text="Skriv in kategori"></Label>
                    <Entry x:Name="CategoriesEntry"></Entry>
                    
                </StackLayout>

                <Button x:Name="Addcategory" HorizontalOptions="Center" Text="Lägg till kategori" Margin="0,30,0,0" Clicked="Addcategory_Clicked" TextColor="Black" ></Button>


            </StackLayout>
        </ScrollView>

</ContentPage>